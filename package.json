{
  "name": "express-ts",
  "version": "1.0.0",
  "description": "express with ts",
  "main": "/dist/src/app.js",
  "scripts": {
    "start": "node dist/src/app.js",
    "build": "rimraf dist && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "test": "jest",
    "test:e2e": "jest --testPathPattern=src/e2e",
    "start:dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "format": "prettier --write .",
    "lint": "eslint .",
    "prisma:push": "prisma db push",
    "prisma:start": "prisma studio"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.2",
    "@prisma/client": "^5.22.0",
    "@types/pug": "^2.0.10",
    "argon2": "^0.41.1",
    "config": "^3.3.12",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.8.0",
    "multer": "1.4.5-lts.1",
    "nanoid": "^3.1.30",
    "nodemailer": "^6.9.16",
    "pino": "^9.5.0",
    "pug": "^3.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.14.0",
    "@types/config": "^3.3.5",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/html-to-text": "^9.0.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/nodemailer": "^6.4.16",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "nodemon": "^3.1.7",
    "pino-pretty": "^11.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "3.3.3",
    "pretty-quick": "^4.0.0",
    "prisma": "^6.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  },
  "engines": {
    "node": "20.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
