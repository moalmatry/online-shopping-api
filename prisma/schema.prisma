enum Gender {
  MALE
  FEMALE
}

enum Role {
  USER
  ADMIN
  EMPLOYEE
}

enum Status {
  PENDING
  SHIPPED
  DELIVERED
  COMPLETED
  CANCELLED
  RETURNED
}
